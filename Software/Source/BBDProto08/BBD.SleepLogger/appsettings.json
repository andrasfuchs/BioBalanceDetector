{
  "DataDirectory": "n:\\Work\\SleepLogger\\",
  //"DataDirectory": "/home/pi/Work/BBD.SleepLogger/",
  "MinimumAvailableFreeSpace": "200 MB",
  "AD2": {
    "Samplerate": "32 kHz",
    "SignalGenerator": {
      "Enabled": false,
      "Channel": "W2",
      "Frequency": "1245.14 Hz",
      "Voltage": "0.5 V"
    }
  },
  "Postprocessing": {
    "Enabled": true,
    "IntervalSeconds": 5.0,
    "FFTSize": "2048k",
    "MagnitudeThreshold": 0,
    "SaveAsWAV": false,
    "SaveAsFFT": false,
    "SaveAsCompressedFFT": true,
    "SaveAsPNG": {
      "Enabled": false,
      "TargetWidth": 1920,
      "TargetHeight": 1080,
      "RangeX": "2 kHz",
      "RangeY": "100 uV",
      "RowWidthStepsSamples": "2 kHz",
      "RowHeightPixels": 900
    }
  },
  "AudioRecording": {
    "Enabled": true,
    "PreferredDevice": "dshow/Microphone (USB Audio Device)",
    //"PreferredDevice": "alsa/hw:2",
    "OutputFormat": "aac",
    "SilenceThreshold": "-20dB"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "BBD.SleepLogger.Program": "Trace"
    }
  }
}
